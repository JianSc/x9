@section scripts{
    <script>
        $(function () {
            $(".tma-box .box").click(function () {
                if (!$(this).hasClass("check")) {
                    if ($("#form1 .check").length >= 2) {
                        layer.alert("最多只能勾选两组球号！");
                        return;
                    } else {
                        $(this).addClass("check");
                    }
                } else {
                    $(this).removeClass("check");
                }
            })

            $("#form1 #reset").click(function () {
                $("#form1 .check").each(function () {
                    $(this).removeClass("check");
                    $("#form2").html('');
                })
            })

            $("#form1 #submit").click(function () {
                var f1 = $("#form1");
                var f = $("#form2");
                var check = $(f1).find(".check");
                var money = $(f1).find("input[name='moneys']");
                if (check.length < 2) {
                    layer.alert("请勾选球号！");
                    return;
                }
                if ($(money).val() == '' || $(money).val() == '0') {
                    layer.alert("请输入下注金额！");
                    return;
                }
                money = parseInt($(money).val());
                if (isNaN(money)) {
                    layer.alert("金额只能输入数字！");
                    return;
                }
                var dom = $("#form1").find(".check");
                var c1 = $(dom[0]).find("input[name='ball']").val();
                var c2 = $(dom[1]).find("input[name='ball']").val();
                c1 = c1.split(',');
                c2 = c2.split(',');
                var b = $(dom[0]).find("input[name='beilu']").val();
                var index = layer.load(1, { shade: [0.3] });

                for (var i = 0; i < c1.length; i++) {
                    for (var j = 0; j < c2.length; j++) {
                        var dom1 = $("<input type=\"hidden\" name=\"ball\" value=" + c1[i] + "," + c2[j] + " />");
                        var dom2 = $("<input type=\"hidden\" name=\"beilu\" value=" + b + " />");
                        var dom3 = $("<input type=\"hidden\" name=\"money\" value=" + money + " />");
                        $(f).append($(dom1)).append($(dom2)).append($(dom3));
                    }
                }

                f.ajaxSubmit({
                    url: "/handle/xiazu_view2/@script_id",
                    type: "POST",
                    success: function (data) {
                        layer.closeAll();
                        layer.open({
                            type: 1,
                            title: "<i class='fa fa-sign-in'></i> 下注池",
                            resize: false,
                            area: ["600px", "400px"],
                            content: data
                        })
                        $(f).html('');
                    }
                })
            })
        })
    </script>
}
