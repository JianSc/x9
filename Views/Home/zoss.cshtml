@section scripts{
    <script>
        $(function () {
            $(".tma-box .s").click(function () {
                var ball = $(this).parent().find("input[name='ball']").val();
                var beilu = $(this).parent().find("input[name='beilu']").val();
                var name = $(this).parent().find("input[name='name']").val();
                $.ajax({
                    url: "/handle/xiazu_view_dan/@script_id",
                    type: "POST",
                    async: false,
                    data: { ball: ball, beilu: beilu, name: name },
                    success: function (data) {
                        layer.open({
                            type: 1,
                            title: "<i class='fa fa-sign-in'></i> 输入金额",
                            resize: false,
                            area: ["230px", "395px"],
                            content: data
                        })
                    }
                })
            })
            $(".tma-but #reset").click(function () {
                $("#form1 .check").each(function () {
                    $(this).removeClass("check");
                })
                $("#form2").html('');
            })
            $(".tma-but #submit").click(function () {
                var f = $("#form1");
                var index = layer.load(1, { shade: [0.3] });
                f.ajaxSubmit({
                    url: "/handle/xiazu_view/@script_id",
                    type: "POST",
                    success: function (data) {
                        layer.closeAll();
                        layer.open({
                            type: 1,
                            title: "<i class='fa fa-sign-in'></i> 下注池",
                            resize: false,
                            area: ["600px", "400px"],
                            content: data
                        })
                    }
                })
            })
        })
    </script>
}
