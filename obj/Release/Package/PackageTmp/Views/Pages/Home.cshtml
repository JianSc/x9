                                    string[] xball = ms.ball.Trim().Split(',');
                                    string[] ssx = ms.shengxiao.Trim().Split(',');
                                    string[] colors = ms.color.Trim().Split(',');

                                    <ul style="overflow:hidden">
                                        @{
                                    for (var i = 0; i < xball.Length; i++)
