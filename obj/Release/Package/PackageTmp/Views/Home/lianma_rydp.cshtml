@section scripts{
    <script>
        $(function () {
            $(".b1 .m").click(function () {
                if ($(this).hasClass("ed")) {
                    return;
                }
                var num = $(this).find("input[name='ball']").val();
                var l = $(".b1 .check").length;
                if ($(this).hasClass("check")) {
                    $(this).removeClass("check");
                    var bclass = ' .e' + num;
                    var dom = $(".b2" + bclass);
                    $(dom).removeClass("ed");

                } else {
                    if (l < 10) {
                        $(this).addClass("check");
                        var bclass = ' .e' + num;
                        var dom = $(".b2" + bclass);
                        $(dom).addClass("ed");
                    } else {
                        layer.alert("第一组最多只能选择10颗球号！");
                        return;
                    }
                }
            })

            $(".b2 .m").click(function () {
                if ($(this).hasClass("ed")) {
                    return;
                }
                var num = $(this).find("input[name='ball']").val();
                var l = $(".b2 .check").length;
                if ($(this).hasClass("check")) {
                    $(this).removeClass("check");
                    var bclass = " .d" + num;
                    var dom = $(".b1" + bclass);
                    $(dom).removeClass("ed");
                } else {
                    if (l < 10) {
                        $(this).addClass("check");
                        var bclass = " .d" + num;
                        var dom = $(".b1" + bclass);
                        $(dom).addClass("ed");
                    } else {
                        layer.alert("第二组最多只能选择10颗球号！");
                        return;
                    }
                }
            })

            $(".tma-but #submit").click(function () {
                var dom1 = $(".b1 .check");
                var dom2 = $(".b2 .check");
                var f = $("#form2");
                $(f).html('');
                var money = $("#form1 input[name='moneys']").val();

                if (dom1.length < 1) {
                    layer.alert("第一组球号不能为空！");
                    return;
                }
                if (dom2.length < 1) {
                    layer.alert("第二组球号不能为空！");
                    return;
                }
                if (money == '' || money == null) {
                    layer.alert("请输入下注金额！");
                    return;
                }
                money = parseInt(money);
                if (isNaN(money)) {
                    layer.alert("金额只能输入数字！");
                    return;
                }
                var index = layer.load(1, { shade: [0.3] });
                for (var i = 0; i < dom1.length; i++) {
                    for (var j = 0; j < dom2.length; j++) {
                        var s1 = $(dom1[i]).find("input[name='ball']").val();
                        var s2 = $(dom2[j]).find("input[name='ball']").val();
                        var b1 = $(dom1[i]).find("input[name='beilu']").val();
                        var c1 = $("<input name='ball' type='hidden' value='" + s1 + "," + s2 + "' />");
                        var c2 = $("<input name='beilu' type='hidden' value='" + b1 + "' />");
                        var c3 = $("<input name='money' type='hidden' value='" + money + "' />");
                        $(f).append($(c1)).append($(c2)).append($(c3));
                    }
                }
                f.ajaxSubmit({
                    url: "/handle/xiazu_view2/@script_id",
                    type: "POST",
                    success: function (data) {
                        layer.closeAll();
                        layer.open({
                            type: 1,
                            title: "<i class='fa fa-sign-in'></i> 下注池",
                            resize: false,
                            area: ["600px", "400px"],
                            content: data
                        })
                        $(f).html('');
                    }
                })
            })
            $(".tma-but #reset").click(function () {
                $("#form1 .check").each(function () {
                    $(this).removeClass("check");
                });
                $("#form1 .ed").each(function () {
                    $(this).removeClass("ed");
                })
                $("#form2").html('');
            })
        })
    </script>
}
