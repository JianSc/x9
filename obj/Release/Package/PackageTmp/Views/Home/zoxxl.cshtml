@section scripts{
    <script>
        $(function () {
            $(".tma-box .box").click(function () {
                if ($(this).hasClass("check")) {
                    $(this).removeClass("check");
                } else {
                    var l = $("#form1 .check").length;
                    if (l < 6) {
                        $(this).addClass("check");
                    }
                }
            })
            $(".tma-but #submit").click(function () {
                var dom = $("#form1 .check");
                var f = $("#form2");
                $(f).html('');
                if (dom.length != 6) {
                    layer.alert("只能勾选6组生肖球号！");
                    return;
                }
                var money = $("#form1 input[name='moneys']").val();
                if (money == '' || money == null) {
                    layer.alert("请输入下注金额！");
                    return;
                }
                money = parseInt(money);
                if (isNaN(money)) {
                    layer.alert("金额只能输入数字！");
                    return;
                }
                var ball = '';
                $("#form1 .check").each(function () {
                    ball += $(this).find("input[name='ball']").val();
                    ball += ",";
                })
                if (ball.length > 0) {
                    var index = layer.load(1, { shade: [0.3] });
                    ball = ball.substring(0, ball.length - 1);
                    var c1 = "<input name='ball' type='hidden' value='" + ball + "' />";
                    var c2 = "<input name='beilu' type='hidden' value='@beilu'  />";
                    var c3 = "<input name='money' type='hidden' value='" + money + "' />";
                    $(f).append($(c1)).append($(c2)).append($(c3));

                    f.ajaxSubmit({
                        url: "/handle/xiazu_view2/@script_id",
                        type: "POST",
                        success: function (data) {
                            layer.closeAll();
                            layer.open({
                                type: 1,
                                title: "<i class='fa fa-sign-in'></i> 下注池",
                                resize: false,
                                area: ["600px", "400px"],
                                content: data
                            })
                            $(f).html('');
                        }
                    })
                }
            })
            $(".tma-but #reset").click(function () {
                $("#form1 .check").each(function () {
                    $(this).removeClass("check");
                })
                $("#form2").html('');
            })
        })
        function newkey(e) {
            switch (e) {
                case "家禽":
                    $(".box input[name='ball']").each(function () {
                        var sx = "牛,马,羊,鸡,狗,猪";
                        var sxx = $(this).val();
                        if (sx.indexOf(sxx) > -1) {
                            $(this).parent().parent().addClass("check");
                        }
                    })
                    break;
                case "野兽":
                    $(".box input[name='ball']").each(function () {
                        var sx = "鼠,虎,兔,龙,蛇,猴";
                        var sxx = $(this).val();
                        if (sx.indexOf(sxx) > -1) {
                            $(this).parent().parent().addClass("check");
                        }
                    })
                    break;
            }
        }
    </script>
}
